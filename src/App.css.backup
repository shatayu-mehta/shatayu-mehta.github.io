@import url('https://fonts.googleapis.com/css2?family=Orbitron:wght@400;700;900&family=Rajdhani:wght@300;400;500;600;700&display=swap');

:root {
  --primary-cyan: #00ffff;
  --primary-magenta: #ff0080;
  --primary-green: #80ff00;
  --primary-blue: #0080ff;
  --primary-orange: #ff6f00;
  --primary-purple: #8b5cf6;
  --bg-dark: #0a0a0a;
  --bg-darker: #050505;
  --bg-card: rgba(20, 20, 20, 0.9);
  --text-light: #ffffff;
  --text-gray: #aaaaaa;
  --text-dimmed: #666666;
  --border-glow: rgba(0, 255, 255, 0.3);
  --border-subtle: rgba(255, 255, 255, 0.1);
}

* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  font-family: 'Rajdhani', sans-serif;
  background: var(--bg-dark);
  color: var(--text-light);
  overflow-x: hidden;
  cursor: none;
  line-height: 1.6;
}

/* Custom cursor */
.custom-cursor {
  position: fixed;
  width: 20px;
  height: 20px;
  background: var(--primary-cyan);
  border-radius: 50%;
  pointer-events: none;
  z-index: 9999;
  mix-blend-mode: difference;
  transition: transform 0.1s ease;
  transform: translate(-50%, -50%);
  box-shadow: 0 0 20px var(--primary-cyan);
}

body::after {
  display: none;
}

.app {
  min-height: 100vh;
  position: relative;
  background: 
    radial-gradient(circle at 20% 50%, rgba(0, 255, 255, 0.1) 0%, transparent 50%),
    radial-gradient(circle at 80% 20%, rgba(255, 0, 128, 0.1) 0%, transparent 50%),
    radial-gradient(circle at 40% 80%, rgba(128, 255, 0, 0.1) 0%, transparent 50%),
    linear-gradient(135deg, var(--bg-dark) 0%, var(--bg-darker) 100%);
}

/* Grid overlay */
.grid-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-image: 
    linear-gradient(rgba(0, 255, 255, 0.03) 1px, transparent 1px),
    linear-gradient(90deg, rgba(0, 255, 255, 0.03) 1px, transparent 1px);
  background-size: 50px 50px;
  pointer-events: none;
  z-index: 1;
}

/* Glitch overlay */
.glitch-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(
    90deg,
    transparent 0%,
    rgba(0, 255, 255, 0.02) 50%,
    transparent 100%
  );
  animation: scan 3s linear infinite;
  pointer-events: none;
  z-index: 2;
}

@keyframes scan {
  0% { transform: translateX(-100%); }
  100% { transform: translateX(100vw); }
}

/* Canvas container */
.canvas-container {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 0;
}

/* Navigation */
.navigation {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20px 40px;
  background: rgba(10, 10, 10, 0.8);
  backdrop-filter: blur(10px);
  border-bottom: 1px solid var(--border-glow);
  z-index: 100;
}

.nav-brand {
  font-family: 'Orbitron', monospace;
  font-size: 1.5rem;
  font-weight: 900;
  color: var(--primary-cyan);
}

.nav-menu {
  display: flex;
  list-style: none;
  gap: 30px;
}

.nav-link {
  background: none;
  border: none;
  color: var(--text-gray);
  font-family: 'Rajdhani', sans-serif;
  font-size: 1rem;
  font-weight: 600;
  letter-spacing: 1px;
  cursor: pointer;
  position: relative;
  padding: 10px 0;
  transition: all 0.3s ease;
}

.nav-link:hover,
.nav-link.active {
  color: var(--primary-cyan);
  text-shadow: 0 0 10px var(--primary-cyan);
}

.nav-link::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  width: 0;
  height: 2px;
  background: linear-gradient(90deg, var(--primary-cyan), var(--primary-magenta));
  transition: width 0.3s ease;
}

.nav-link:hover::after,
.nav-link.active::after {
  width: 100%;
}

/* Glitch effect */
.glitch {
  position: relative;
  color: var(--primary-cyan);
  font-family: 'Orbitron', monospace;
  animation: glitch 2s infinite;
}

.glitch::before,
.glitch::after {
  content: attr(data-text);
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.glitch::before {
  animation: glitch-1 0.5s infinite;
  color: var(--primary-magenta);
  z-index: -1;
}

.glitch::after {
  animation: glitch-2 0.5s infinite;
  color: var(--primary-green);
  z-index: -2;
}

@keyframes glitch {
  0%, 100% { transform: translate(0); }
  20% { transform: translate(-2px, 2px); }
  40% { transform: translate(-2px, -2px); }
  60% { transform: translate(2px, 2px); }
  80% { transform: translate(2px, -2px); }
}

@keyframes glitch-1 {
  0%, 100% { transform: translate(0); }
  20% { transform: translate(2px, -2px); }
  40% { transform: translate(-2px, 2px); }
  60% { transform: translate(-2px, -2px); }
  80% { transform: translate(2px, 2px); }
}

@keyframes glitch-2 {
  0%, 100% { transform: translate(0); }
  20% { transform: translate(-2px, -2px); }
  40% { transform: translate(2px, -2px); }
  60% { transform: translate(2px, 2px); }
  80% { transform: translate(-2px, 2px); }
}

/* Portfolio container */
.portfolio-container {
  position: fixed;
  top: 100px;
  right: 0;
  width: 50%;
  height: calc(100vh - 100px);
  padding: 40px;
  overflow-y: auto;
  z-index: 10;
  background: rgba(10, 10, 10, 0.7);
  backdrop-filter: blur(15px);
  border-left: 1px solid var(--border-glow);
}

.section-content {
  max-width: 600px;
  position: relative;
  z-index: 2;
}

/* Typography */
.cyber-title {
  font-family: 'Orbitron', monospace;
  font-size: 3rem;
  font-weight: 900;
  margin-bottom: 20px;
  text-shadow: 0 0 20px var(--primary-cyan);
}

.cyber-subtitle {
  font-size: 1.2rem;
  color: var(--text-gray);
  margin-bottom: 40px;
  line-height: 1.6;
}

.section-title {
  font-family: 'Orbitron', monospace;
  font-size: 2.5rem;
  font-weight: 700;
  margin-bottom: 30px;
  color: var(--primary-cyan);
  text-shadow: 0 0 15px var(--primary-cyan);
}

/* Stats grid */
.stats-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20px;
  margin-top: 40px;
}

.stat-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20px;
  background: rgba(0, 255, 255, 0.05);
  border: 1px solid var(--border-glow);
  border-radius: 10px;
  transition: all 0.3s ease;
}

.stat-card:hover {
  transform: translateY(-5px);
  background: rgba(0, 255, 255, 0.1);
  box-shadow: 0 10px 30px rgba(0, 255, 255, 0.2);
}

.stat-number {
  font-family: 'Orbitron', monospace;
  font-size: 2rem;
  font-weight: 900;
  color: var(--primary-cyan);
  text-shadow: 0 0 10px var(--primary-cyan);
}

.stat-label {
  font-size: 0.9rem;
  color: var(--text-gray);
  margin-top: 5px;
  text-align: center;
}

/* About section */
.about-content {
  margin-bottom: 20px;
  position: relative;
}

.about-background-image {
  position: fixed;
  left: 0;
  top: 0;
  width: 50vw;
  height: 100vh;
  z-index: 1;
  opacity: 0.9;
}

.about-bg-image {
  width: 90%;
  height: 100%;
  object-fit: cover;
}

/* =============================================
   NEW COMPONENT STYLES
   ============================================= */

/* Startup Screen */
.startup-screen {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 9999;
  overflow: hidden;
}

.startup-background {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
}

.startup-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(
    45deg,
    rgba(0, 0, 0, 0.8) 0%,
    rgba(0, 10, 20, 0.9) 50%,
    rgba(0, 0, 0, 0.8) 100%
  );
}

.startup-content {
  position: relative;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  text-align: center;
  padding: 2rem;
}

.startup-logo {
  margin-bottom: 3rem;
}

.logo-text {
  font-family: 'Orbitron', monospace;
  font-size: 4rem;
  font-weight: 900;
  color: var(--primary-cyan);
  text-shadow: 0 0 30px var(--primary-cyan);
  margin-bottom: 0.5rem;
  letter-spacing: 0.2em;
}

.logo-subtitle {
  font-family: 'Rajdhani', sans-serif;
  font-size: 1.2rem;
  color: var(--text-gray);
  letter-spacing: 0.3em;
  font-weight: 300;
}

.loading-container {
  width: 100%;
  max-width: 500px;
}

.loading-text {
  font-family: 'Rajdhani', sans-serif;
  font-size: 1rem;
  color: var(--primary-green);
  margin-bottom: 1rem;
  min-height: 1.5rem;
  letter-spacing: 0.1em;
}

.progress-bar {
  width: 100%;
  height: 4px;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 2px;
  overflow: hidden;
  margin-bottom: 0.5rem;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, var(--primary-cyan), var(--primary-magenta));
  transition: width 0.1s ease;
}

.progress-text {
  font-family: 'Orbitron', monospace;
  font-size: 0.9rem;
  color: var(--primary-cyan);
  text-align: right;
}

.startup-grid {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-image: 
    linear-gradient(rgba(0, 255, 255, 0.1) 1px, transparent 1px),
    linear-gradient(90deg, rgba(0, 255, 255, 0.1) 1px, transparent 1px);
  background-size: 40px 40px;
  pointer-events: none;
}

/* Updated Navigation - override previous styles */
.navigation {
  position: fixed !important;
  top: 0 !important;
  left: 0 !important;
  width: 280px !important;
  height: 100vh !important;
  background: var(--bg-card) !important;
  backdrop-filter: blur(20px) !important;
  border-right: 1px solid var(--border-subtle) !important;
  padding: 2rem 1.5rem !important;
  z-index: 100 !important;
  display: flex !important;
  flex-direction: column !important;
  justify-content: flex-start !important;
  align-items: stretch !important;
}

.nav-brand {
  display: flex;
  align-items: center;
  margin-bottom: 3rem;
  position: relative;
}

.brand-icon {
  font-family: 'Orbitron', monospace;
  font-size: 1.8rem;
  font-weight: 900;
  color: var(--primary-cyan);
  text-shadow: 0 0 20px var(--primary-cyan);
}

.brand-pulse {
  position: absolute;
  right: -15px;
  top: 50%;
  transform: translateY(-50%);
  width: 8px;
  height: 8px;
  background: var(--primary-green);
  border-radius: 50%;
  animation: pulse 2s infinite;
}

.nav-list {
  list-style: none;
  flex: 1;
}

.nav-item {
  margin-bottom: 0.5rem;
  position: relative;
}

.nav-button {
  width: 100%;
  display: flex;
  align-items: center;
  padding: 1rem;
  background: transparent;
  border: none;
  color: var(--text-gray);
  font-family: 'Rajdhani', sans-serif;
  font-size: 0.9rem;
  font-weight: 600;
  letter-spacing: 0.05em;
  cursor: pointer;
  transition: all 0.3s ease;
  border-radius: 8px;
  position: relative;
}

.nav-item.active .nav-button,
.nav-button:hover {
  color: var(--primary-cyan);
  background: rgba(0, 255, 255, 0.1);
}

.nav-icon {
  margin-right: 1rem;
  font-size: 1rem;
}

.nav-glow {
  position: absolute;
  left: 0;
  top: 0;
  width: 2px;
  height: 100%;
  background: var(--primary-cyan);
  opacity: 0;
  transition: opacity 0.3s ease;
}

.nav-item.active .nav-glow {
  opacity: 1;
}

.nav-footer {
  padding-top: 2rem;
  border-top: 1px solid var(--border-subtle);
}

.system-status {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  font-size: 0.8rem;
  color: var(--text-gray);
}

.status-indicator {
  width: 8px;
  height: 8px;
  border-radius: 50%;
  background: var(--primary-green);
  animation: pulse 2s infinite;
}

/* Portfolio Main */
.portfolio-main {
  margin-left: 280px;
  min-height: 100vh;
  position: relative;
}

/* Hero Section */
.hero-section {
  min-height: 100vh;
  display: flex;
  align-items: center;
  padding: 0 4rem;
  position: relative;
}

.hero-content {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 4rem;
  width: 100%;
  max-width: 1400px;
  margin: 0 auto;
}

.hero-text {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.hero-title {
  font-family: 'Orbitron', monospace;
  font-size: 4rem;
  font-weight: 900;
  color: var(--text-light);
  margin-bottom: 1rem;
  line-height: 1.1;
}

.hero-subtitle {
  margin-bottom: 2rem;
}

.glitch-text {
  font-family: 'Orbitron', monospace;
  font-size: 1.5rem;
  font-weight: 700;
  color: var(--primary-cyan);
  position: relative;
  display: inline-block;
}

.glitch-text::before,
.glitch-text::after {
  content: attr(data-text);
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.glitch-text::before {
  animation: glitch-1 0.6s infinite linear alternate-reverse;
  color: var(--primary-magenta);
  z-index: -1;
}

.glitch-text::after {
  animation: glitch-2 0.6s infinite linear alternate-reverse;
  color: var(--primary-green);
  z-index: -2;
}

.hero-description {
  font-size: 1.2rem;
  line-height: 1.8;
  color: var(--text-gray);
  margin-bottom: 3rem;
}

.hero-stats {
  display: flex;
  gap: 2rem;
  margin-bottom: 3rem;
}

.stat-item {
  text-align: center;
}

.stat-number {
  font-family: 'Orbitron', monospace;
  font-size: 2.5rem;
  font-weight: 900;
  color: var(--primary-cyan);
  display: block;
  text-shadow: 0 0 20px var(--primary-cyan);
}

.stat-label {
  font-size: 0.8rem;
  color: var(--text-gray);
  letter-spacing: 0.1em;
  margin-top: 0.5rem;
}

.hero-cta {
  display: flex;
  gap: 1.5rem;
}

.cta-button {
  padding: 1rem 2rem;
  border: 1px solid;
  background: transparent;
  color: var(--text-light);
  font-family: 'Rajdhani', sans-serif;
  font-size: 1rem;
  font-weight: 600;
  letter-spacing: 0.1em;
  cursor: pointer;
  border-radius: 4px;
  position: relative;
  transition: all 0.3s ease;
  overflow: hidden;
}

.cta-button.primary {
  border-color: var(--primary-cyan);
  color: var(--primary-cyan);
}

.cta-button.secondary {
  border-color: var(--text-gray);
  color: var(--text-gray);
}

.cta-button:hover {
  transform: translateY(-2px);
}

.cta-button.primary:hover {
  background: rgba(0, 255, 255, 0.1);
  box-shadow: 0 10px 30px rgba(0, 255, 255, 0.3);
}

.cta-button.secondary:hover {
  background: rgba(255, 255, 255, 0.1);
  color: var(--text-light);
}

.button-glow {
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: left 0.5s ease;
}

.cta-button:hover .button-glow {
  left: 100%;
}

.hero-visual {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
}

.canvas-container-hero {
  width: 400px;
  height: 400px;
  margin-bottom: 2rem;
}

.hero-tech-stack {
  position: relative;
  width: 300px;
  height: 300px;
}

.tech-orbit {
  position: relative;
  width: 100%;
  height: 100%;
  animation: rotate 20s linear infinite;
}

.tech-item {
  position: absolute;
  padding: 0.5rem 1rem;
  background: var(--bg-card);
  border: 1px solid var(--primary-cyan);
  border-radius: 20px;
  font-size: 0.8rem;
  color: var(--primary-cyan);
  font-weight: 600;
  transform-origin: center;
}

.tech-item:nth-child(1) {
  top: 0;
  left: 50%;
  transform: translateX(-50%);
}

.tech-item:nth-child(2) {
  top: 25%;
  right: 10%;
}

.tech-item:nth-child(3) {
  top: 50%;
  right: 0;
  transform: translateY(-50%);
}

.tech-item:nth-child(4) {
  bottom: 25%;
  right: 10%;
}

.tech-item:nth-child(5) {
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
}

.tech-item:nth-child(6) {
  top: 50%;
  left: 0;
  transform: translateY(-50%);
}

@keyframes rotate {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

/* New section header styles */
.section-header,
.about-header {
  text-align: center;
  margin-bottom: 4rem;
}

.title-underline {
  width: 100px;
  height: 3px;
  background: linear-gradient(90deg, var(--primary-cyan), var(--primary-magenta));
  margin: 0 auto 1rem;
}

/* Responsive Design */
@media (max-width: 1200px) {
  .navigation {
    width: 250px;
  }
  
  .portfolio-main {
    margin-left: 250px;
  }
  
  .hero-content {
    gap: 2rem;
  }
  
  .hero-title {
    font-size: 3rem;
  }
}

@media (max-width: 1024px) {
  .navigation {
    transform: translateX(-100%);
    transition: transform 0.3s ease;
  }
  
  .navigation.mobile-open {
    transform: translateX(0);
  }
  
  .portfolio-main {
    margin-left: 0;
  }
  
  .hero-content,
  .about-content,
  .skills-content,
  .contact-content {
    grid-template-columns: 1fr;
    gap: 2rem;
  }
  
  .hero-section,
  .about-section,
  .experience-section,
  .projects-section,
  .skills-section {
    padding: 2rem;
  }
}

@media (max-width: 768px) {
  .hero-title {
    font-size: 2.5rem;
  }
  
  .section-title {
    font-size: 2rem;
  }
  
  .hero-stats {
    flex-direction: column;
    gap: 1rem;
  }
  
  .hero-cta {
    flex-direction: column;
  }
  
  .canvas-container-hero {
    width: 100%;
    max-width: 300px;
    height: 300px;
  }
}

@media (max-width: 480px) {
  .hero-section {
    padding: 1rem;
  }
  
  .hero-title {
    font-size: 2rem;
  }
  
  .logo-text {
    font-size: 3rem;
  }
}

.about-bg-image:hover {
  transform: none !important;
  scale: none !important;
  box-shadow: none !important;
  opacity: 0.9 !important;
}

.about-text {
  font-size: 1.1rem;
  line-height: 1.8;
  margin-bottom: 20px;
  color: var(--text-gray);
  position: relative;
  z-index: 1;
}

.bio-stats {
  margin-top: 30px;
  position: relative;
  z-index: 1;
  /* space-y: 15px; */
}

.bio-item {
  font-size: 1rem;
  margin-bottom: 15px;
  padding: 10px 0;
  border-bottom: 1px solid rgba(0, 255, 255, 0.2);
}

.bio-item strong {
  color: var(--primary-cyan);
  margin-right: 10px;
}

/* Timeline */
.timeline {
  position: relative;
  padding-left: 30px;
}

.timeline::before {
  content: '';
  position: absolute;
  left: 15px;
  top: 0;
  bottom: 0;
  width: 2px;
  background: linear-gradient(to bottom, var(--primary-cyan), var(--primary-magenta));
}

.timeline-item {
  position: relative;
  margin-bottom: 40px;
}

.timeline-dot {
  position: absolute;
  left: -37px;
  top: 5px;
  width: 12px;
  height: 12px;
  background: var(--primary-cyan);
  border-radius: 50%;
  box-shadow: 0 0 10px var(--primary-cyan);
}

.timeline-content h3 {
  font-family: 'Orbitron', monospace;
  font-size: 1.3rem;
  color: var(--primary-cyan);
  margin-bottom: 5px;
}

.timeline-content h4 {
  font-size: 1.1rem;
  color: var(--primary-magenta);
  margin-bottom: 5px;
}

.timeline-date {
  font-size: 0.9rem;
  color: var(--text-gray);
  margin-bottom: 10px;
  display: block;
}

.timeline-content p {
  line-height: 1.6;
  color: var(--text-gray);
}

/* Projects grid */
.projects-grid {
  display: grid;
  gap: 25px;
}

.project-card {
  padding: 25px;
  background: rgba(0, 255, 255, 0.05);
  border: 1px solid var(--border-glow);
  border-radius: 10px;
  transition: all 0.3s ease;
}

.project-card:hover {
  transform: translateY(-5px);
  background: rgba(0, 255, 255, 0.1);
  box-shadow: 0 15px 40px rgba(0, 255, 255, 0.2);
}

.project-card h3 {
  font-family: 'Orbitron', monospace;
  font-size: 1.4rem;
  color: var(--primary-cyan);
  margin-bottom: 15px;
}

.project-card p {
  line-height: 1.6;
  color: var(--text-gray);
  margin-bottom: 20px;
}

.tech-stack {
  display: flex;
  gap: 10px;
  flex-wrap: wrap;
}

.tech-stack span {
  padding: 5px 12px;
  background: rgba(255, 0, 128, 0.2);
  border: 1px solid var(--primary-magenta);
  border-radius: 20px;
  font-size: 0.8rem;
  color: var(--primary-magenta);
}

/* Skills */
.skills-container {
  margin-bottom: 30px;
}

.skill-category {
  margin-bottom: 30px;
}

.skill-category h3 {
  font-family: 'Orbitron', monospace;
  font-size: 1.3rem;
  color: var(--primary-cyan);
  margin-bottom: 20px;
}

.skill-bars {
  margin-bottom: 15px;
}

.skill-bar {
  margin-bottom: 15px;
}

.skill-bar span {
  display: block;
  margin-bottom: 8px;
  color: var(--text-gray);
  font-weight: 600;
}

.skill-progress {
  width: 100%;
  height: 8px;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 4px;
  overflow: hidden;
  position: relative;
}

.skill-progress::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  height: 100%;
  background: linear-gradient(90deg, var(--primary-cyan), var(--primary-magenta));
  border-radius: 4px;
  transition: width 2s ease;
}

.skill-progress[data-level="95"]::after { width: 95%; }
.skill-progress[data-level="93"]::after { width: 93%; }
.skill-progress[data-level="92"]::after { width: 92%; }
.skill-progress[data-level="90"]::after { width: 90%; }
.skill-progress[data-level="88"]::after { width: 88%; }
.skill-progress[data-level="87"]::after { width: 87%; }
.skill-progress[data-level="85"]::after { width: 85%; }
.skill-progress[data-level="80"]::after { width: 80%; }

/* Contact */
.contact-content {
  margin-bottom: 30px;
}

.contact-intro {
  font-size: 1.1rem;
  line-height: 1.8;
  color: var(--text-gray);
  margin-bottom: 30px;
}

.contact-methods {
  margin-bottom: 20px;
}

.contact-link {
  display: flex;
  align-items: center;
  gap: 15px;
  padding: 15px 20px;
  background: rgba(0, 255, 255, 0.05);
  border: 1px solid var(--border-glow);
  border-radius: 10px;
  color: var(--text-light);
  text-decoration: none;
  transition: all 0.3s ease;
  margin-bottom: 20px;
}

.contact-link:hover {
  background: rgba(0, 255, 255, 0.1);
  transform: translateX(10px);
  box-shadow: 0 5px 20px rgba(0, 255, 255, 0.2);
}

.contact-icon {
  font-size: 1.5rem;
}

.contact-note {
  margin-top: 30px;
  padding: 20px;
  background: rgba(128, 255, 0, 0.05);
  border: 1px solid rgba(128, 255, 0, 0.3);
  border-radius: 10px;
  text-align: center;
}

.contact-note p {
  color: var(--primary-green);
  font-style: italic;
}

/* Loading screen */
.loading-screen {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: var(--bg-darker);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.loading-content {
  text-align: center;
  max-width: 500px;
}

.loading-title {
  font-family: 'Orbitron', monospace;
  font-size: 3rem;
  font-weight: 900;
  margin-bottom: 40px;
  color: var(--primary-cyan);
}

.loading-bar-container {
  display: flex;
  align-items: center;
  gap: 20px;
  margin-bottom: 30px;
}

.loading-bar {
  flex: 1;
  height: 8px;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 4px;
  overflow: hidden;
}

.loading-fill {
  height: 100%;
  background: linear-gradient(90deg, var(--primary-cyan), var(--primary-magenta));
  border-radius: 4px;
}

.loading-percentage {
  font-family: 'Orbitron', monospace;
  font-size: 1.2rem;
  color: var(--primary-cyan);
  min-width: 50px;
}

.loading-text {
  font-size: 1.1rem;
  color: var(--text-gray);
  margin-bottom: 40px;
  height: 30px;
}

.loading-matrix {
  display: flex;
  justify-content: center;
  gap: 5px;
  flex-wrap: wrap;
}

.matrix-char {
  font-family: 'Orbitron', monospace;
  font-size: 1rem;
  color: var(--primary-green);
}

/* Scrollbar */
::-webkit-scrollbar {
  width: 8px;
}

::-webkit-scrollbar-track {
  background: rgba(255, 255, 255, 0.1);
}

::-webkit-scrollbar-thumb {
  background: linear-gradient(to bottom, var(--primary-cyan), var(--primary-magenta));
  border-radius: 4px;
}

::-webkit-scrollbar-thumb:hover {
  background: linear-gradient(to bottom, var(--primary-magenta), var(--primary-cyan));
}

/* Responsive design */
@media (max-width: 1024px) {
  .portfolio-container {
    width: 60%;
  }
  
  .cyber-title {
    font-size: 2.5rem;
  }
  
  .stats-grid {
    grid-template-columns: 1fr;
  }
}

@media (max-width: 768px) {
  .navigation {
    padding: 15px 20px;
  }
  
  .nav-menu {
    position: fixed;
    top: 80px;
    right: -100%;
    width: 300px;
    height: calc(100vh - 80px);
    background: rgba(10, 10, 10, 0.95);
    backdrop-filter: blur(20px);
    border-left: 1px solid var(--border-glow);
    flex-direction: column;
    align-items: flex-start;
    padding: 40px 20px;
    transition: right 0.3s ease;
    z-index: 90;
  }
  
  .nav-menu-open {
    right: 0;
  }
  
  .nav-toggle {
    display: flex;
    flex-direction: column;
    gap: 4px;
    cursor: pointer;
    z-index: 100;
  }
  
  .nav-toggle span {
    width: 25px;
    height: 3px;
    background: var(--primary-cyan);
    transition: all 0.3s ease;
  }
  
  .nav-toggle-open span:nth-child(1) {
    transform: rotate(45deg) translate(5px, 5px);
  }
  
  .nav-toggle-open span:nth-child(2) {
    opacity: 0;
  }
  
  .nav-toggle-open span:nth-child(3) {
    transform: rotate(-45deg) translate(7px, -6px);
  }
  
  .portfolio-container {
    width: 100%;
    top: 80px;
    height: calc(100vh - 80px);
    padding: 20px;
  }
  
  .cyber-title {
    font-size: 2rem;
  }
  
  .section-title {
    font-size: 2rem;
  }
}

@media (min-width: 769px) {
  .nav-toggle {
    display: none;
  }
}

/* Robot Vision Animations */
@keyframes pulse {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.3; }
}

@keyframes fadeInOut {
  0%, 100% { opacity: 0.2; }
  50% { opacity: 1; }
}

@keyframes robotScan {
  0% { transform: translateY(-100%); opacity: 0; }
  10% { opacity: 1; }
  90% { opacity: 1; }
  100% { transform: translateY(100vh); opacity: 0; }
}

@keyframes hexProcess {
  0% { box-shadow: 0 0 5px #00ffff; }
  50% { box-shadow: 0 0 20px #00ffff, 0 0 30px #ff0080; }
  100% { box-shadow: 0 0 5px #00ffff; }
}

@keyframes dataStream {
  0% { transform: translateY(100%); opacity: 0; }
  10% { opacity: 1; }
  90% { opacity: 1; }
  100% { transform: translateY(-100%); opacity: 0; }
}

/* Robot eye glitch effect */
@keyframes robotGlitch {
  0% { transform: translate(0); }
  20% { transform: translate(-2px, 2px); }
  40% { transform: translate(-2px, -2px); }
  60% { transform: translate(2px, 2px); }
  80% { transform: translate(2px, -2px); }
  100% { transform: translate(0); }
}

/* Establish Contact Component Styles */
.establish-contact {
  font-family: 'Orbitron', monospace;
}

.social-icon-overlay {
  font-family: 'Orbitron', monospace;
  font-weight: bold;
  user-select: none;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  filter: drop-shadow(0 0 5px currentColor);
}

.social-icon-overlay:hover {
  transform: translate(-50%, -50%) scale(1.2);
  filter: drop-shadow(0 0 15px currentColor);
}

.social-icon-overlay.hovered {
  animation: pulse 1s ease-in-out infinite alternate;
}

@keyframes pulse {
  0% { opacity: 0.8; }
  100% { opacity: 1; }
}

/* Additional cyberpunk styling for contact section */
.establish-contact .cyber-title {
  position: relative;
}

.establish-contact .cyber-title::before {
  content: '';
  position: absolute;
  top: -10px;
  left: -10px;
  right: -10px;
  bottom: -10px;
  background: linear-gradient(45deg, transparent 30%, rgba(0, 255, 255, 0.1) 50%, transparent 70%);
  z-index: -1;
  border-radius: 10px;
}

/* Glitch effect for title */
.establish-contact .glitch {
  position: relative;
  display: inline-block;
}

.establish-contact .glitch::before,
.establish-contact .glitch::after {
  content: attr(data-text);
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0.8;
}

.establish-contact .glitch::before {
  animation: glitch-1 0.5s ease-in-out infinite alternate;
  color: #ff00ff;
  z-index: -1;
}

.establish-contact .glitch::after {
  animation: glitch-2 0.5s ease-in-out infinite alternate;
  color: #00ffff;
  z-index: -2;
}

@keyframes glitch-1 {
  0% { transform: translate(0); }
  20% { transform: translate(-2px, 2px); }
  40% { transform: translate(-2px, -2px); }
  60% { transform: translate(2px, 2px); }
  80% { transform: translate(2px, -2px); }
  100% { transform: translate(0); }
}

@keyframes glitch-2 {
  0% { transform: translate(0); }
  20% { transform: translate(2px, -2px); }
  40% { transform: translate(2px, 2px); }
  60% { transform: translate(-2px, -2px); }
  80% { transform: translate(-2px, 2px); }
  100% { transform: translate(0); }
}

/* Theater spotlight animation */
@keyframes spotlightPulse {
  0% { 
    opacity: 0.8; 
    transform: translateX(-50%) scale(1);
  }
  50% { 
    opacity: 1; 
    transform: translateX(-50%) scale(1.1);
  }
  100% { 
    opacity: 0.8; 
    transform: translateX(-50%) scale(1);
  }
}

/* Responsive design for about section */
@media (max-width: 768px) {
  .about-background-image {
    position: static;
    width: 100%;
    height: 300px;
    margin-bottom: 20px;
    opacity: 1;
  }
  
  .about-bg-image {
    width: 90%;
    height: 100%;
    object-fit: cover;
  }
  
  .about-content {
    text-align: center;
  }
}
